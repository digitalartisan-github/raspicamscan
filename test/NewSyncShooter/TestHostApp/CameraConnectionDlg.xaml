<Window x:Class="TestHostApp.CameraConnectionDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestHostApp"
        mc:Ignorable="d"
        Title="Camera Connection" Height="auto" Width="250" WindowStyle="ToolWindow" ResizeMode="NoResize" SizeToContent="Height">
    <StackPanel Margin="4">
        <Label Margin="4,4,4,0" Content="Connected:"/>
        <ListBox Name="ListBox_Connected" Height="150" Margin="4"/>
        <Label Margin="4,4,4,0" Content="Not Connected:"/>
        <ListBox Name="ListBox_NotConnected" Height="150" Margin="4"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="Button_OK" Height="24" Content="OK" Width="48" Margin="4" Click="Button_OK_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
